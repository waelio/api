{
  "name": "waelio-api",
  "version": "0.1.0",
  "type": "module",
  "description": "Waelio API - Nitro TypeScript with OpenAPI",
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@parcel/watcher"
    ]
  },
  "scripts": {
    "dev": "pnpm dev:api & pnpm dev:ui",
    "dev:api": "nitro dev --port 4000",
    "dev:ui": "cd frontend && pnpm dev",
    "build": "nitro build",
    "start": "node .output/server/index.mjs",
    "preview": "node .output/server/index.mjs",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "mongoose": "^8.9.5",
    "netlify-cli": "^23.14.0",
    "nitropack": "^2.13.1",
    "nodemailer": "^7.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.19.30",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3"
  }
}